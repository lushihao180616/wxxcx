.all {
  background-color: #efefef;
}

.item {
  width: 100%;
  height: 450rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.item_left,.item_right {
  width: 48%;
  margin: 0rpx 10rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
}

.goodsimage {
  width: 100%;
  height: 300rpx;
}

.goodsname {
  border-top: 1rpx solid #aaa;
  margin-top: 10rpx;
  width: 100%;
  height: 70rpx;
  color: #333;
  line-height: 70rpx;
  font-size: 30rpx;
}

.goodsprice {
  width: 100%;
  height: 50rpx;
  color: #333;
  line-height: 50rpx;
  font-size: 30rpx;
}