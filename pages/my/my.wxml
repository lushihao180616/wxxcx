<!--index.wxml-->
<view class="all">
  <view class="back">
    <view class="userinfo">
        <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </view>
  </view>
  <view class="row">
    <view class="row_item" bindtap="toSendPurchaseSelectPage">
      <image class="image_item" src="../../utils/image/sendpurchase.png"></image>
      <text>发出的任务</text>
    </view>
    <view class="row_item" bindtap="toGetPurchaseSelectPage">
      <image class="image_item" src="../../utils/image/getpurchase.png"></image>
      <text>接收的任务</text>
    </view>
    <view class="row_item" bindtap="toSellGoodsSelectPage">
      <image class="image_item" src="../../utils/image/sellgoods.png"></image>
      <text>出手的宝贝</text>
    </view>
    <view class="row_item" bindtap="toBuyGoodsSelectPage">
      <image class="image_item" src="../../utils/image/buygoods.png"></image>
      <text>入手的宝贝</text>
    </view>
  </view>
  <view class="item">
    <view class="shape" bindtap="toAddressPage">
      <image class="imageshape" src="../../utils/image/address.png"></image>
      <text>收货地址</text>
    </view>
    <view class="border" hidden="true"></view>
    <view class="shape" hidden="true" bindtap="toGiftPage">
      <image class="imageshape" src="../../utils/image/gift.png"></image>
      <text>推荐有奖</text>
    </view>
    <view class="border" hidden="true"></view>
    <view class="shape" hidden="true" bindtap="toServicePage">
      <image class="imageshape" src="../../utils/image/service.png"></image>
      <text>我的客服</text>
    </view>
    <view class="border"></view>
    <view class="shape" bindtap="toRulePage">
      <image class="imageshape" src="../../utils/image/rule.png"></image>
      <text>捎微简介</text>
    </view>
  </view>
</view>
