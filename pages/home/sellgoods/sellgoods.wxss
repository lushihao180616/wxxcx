.row {
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 10rpx;
  background-color: #efefef;
  height: 75rpx;
  margin-bottom: 5rpx;
}

.text {
  font-size: 30rpx;
  width: 200rpx;
}

.input {
  width: 100%;
  font-size: 30rpx;
}

.placeholderstyle {
  font-size: 30rpx;
}

.picker,.updataimage {
  font-size: 30rpx;
  color: green;
  width: 100%;
}

.radio-group {
  font-size: 30rpx;
}

.radio {
  width: 40rpx;
  transform:translate(-50%, -5%) scale(0.7);
  margin-left: -30rpx;
}

.radio2 {
  margin-left: 300rpx;
}

.row2 {
  height: 210rpx;
}

.input2 {
  height: 180rpx;
}

.foot {
  height: 75rpx;
  margin: 180rpx 30rpx 0rpx 30rpx;
  border-radius: 20rpx;
}

.button {
  height: 75rpx;
  background-color: #09BB07;
  font-size: 30rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 30rpx;
}