<!--pages/my/my.wxml-->
<view class="all">
  <!--pages/test/test.wxml-->
  <!-- 组件 -->
  <swiper class="imgs" indicator-dots="true" autoplay="true" interval="5000" duration="1000">
    <swiper-item wx:for="{{imgUrls}}">
      <image src='{{item}}' width="335" height="150" mode='widthFix' class='img' />
    </swiper-item>
  </swiper>
  <view class="top">
    <view id="left_top" class="shape" bindtap="send_purchase">发任务
    </view>
    <view id="right_top" class="shape" bindtap="get_purchase">接任务
    </view>
  </view>
  <view class="middle">
    <view class="middle_middle" bindtap="confession">告白墙
    </view>
  </view>
  <view class="bottom">
    <view id="left_bottom" class="shape" bindtap="send_express">取快递
    </view>
    <view id="right_bottom" class="shape" bindtap="get_express">送快递
    </view>
  </view>
</view>