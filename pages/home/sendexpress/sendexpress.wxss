.row {
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 10rpx;
  background-color: #efefef;
  height: 75rpx;
  margin-bottom: 5rpx;
}

.text {
  font-size: 30rpx;
  width: 200rpx;
}

.input {
  width: 100%;
  font-size: 30rpx;
}

.input2 {
  height: 120rpx;
}

.picker {
  font-size: 30rpx;
  color: green;
  width: 100%;
}

.row2 {
  margin-top: 3rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.row3 {
  height: 150rpx;
}

.row4 {
  text-align: center;
  background-color: #999;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 5rpx;
  color: white;
  font-weight: bold;
  margin-top: 10rpx;
}

.button_left,.button_right {
  margin-bottom: 10rpx;
  border-radius: 35rpx;
  height: 55rpx;
  background-color: #777;
  width: 50%;
  text-align: center;
  line-height: 55rpx;
  color: white;
  font-size: 30rpx;
}

.button_left {
  margin-left: -50rpx;
}

.button_right {
  margin-right: -50rpx; 
}

.showNum {
  height: 75rpx;
  width: 75rpx;
  border-radius: 40rpx;
  color: white;
}

.inner {
  width: 75rpx;
  height: 75rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.foot {
  left: 15rpx;
  right: 15rpx;
  height: 90rpx;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.addaddresstext {
  width: 100%;
  height: 90rpx;
  background-color: #09BB07;
  font-size: 30rpx;
  color: white;
  font-weight: bold;
  padding-top: 10rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  border-bottom-left-radius: 0rpx;
  border-bottom-right-radius: 0rpx;
}